
{
  "expo": {
    "name": "CarDrop",
    "slug": "cardrop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/cardrop-icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/cardrop-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.cardrop.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "CarDrop needs your location to show nearby vehicles and car meets.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "CarDrop needs your location to detect nearby vehicles via Bluetooth.",
        "NSBluetoothAlwaysUsageDescription": "CarDrop uses Bluetooth to detect nearby vehicles and enable proximity features.",
        "NSBluetoothPeripheralUsageDescription": "CarDrop uses Bluetooth to broadcast your vehicle's presence to nearby users.",
        "NSCameraUsageDescription": "CarDrop needs camera access to take photos of your vehicle and at car meets.",
        "NSPhotoLibraryUsageDescription": "CarDrop needs photo library access to upload vehicle photos and meet galleries.",
        "NSMicrophoneUsageDescription": "CarDrop needs microphone access to record videos for your vehicle timeline.",
        "UIBackgroundModes": ["location", "bluetooth-central", "bluetooth-peripheral"]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/cardrop-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.cardrop.app",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_ADVERTISE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "RECORD_AUDIO",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-location",
      "expo-image-picker",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 23,
            "targetSdkVersion": 34,
            "compileSdkVersion": 34
          },
          "ios": {
            "deploymentTarget": "13.4"
          }
        }
      ]
    ],
    "scheme": "cardrop",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-project-id-here"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
