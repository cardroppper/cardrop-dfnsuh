
{
  "expo": {
    "name": "CarDrop",
    "slug": "cardrop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/6a39751f-03b5-4411-acbb-1e92f6a5988e.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/6a39751f-03b5-4411-acbb-1e92f6a5988e.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A1A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cardrop.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSBluetoothAlwaysUsageDescription": "CarDrop uses Bluetooth to discover nearby vehicles when you start scanning. This allows you to see cars that are physically near you at meets and events.",
        "NSBluetoothPeripheralUsageDescription": "CarDrop uses Bluetooth to discover nearby vehicles when you start scanning."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/6a39751f-03b5-4411-acbb-1e92f6a5988e.png",
        "backgroundColor": "#1A1A1A"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cardrop.app",
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/images/6a39751f-03b5-4411-acbb-1e92f6a5988e.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": false,
          "modes": [
            "peripheral",
            "central"
          ],
          "bluetoothAlwaysPermission": "CarDrop uses Bluetooth to discover nearby vehicles when you start scanning. This allows you to see cars that are physically near you at meets and events."
        }
      ]
    ],
    "scheme": "cardrop",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {}
    }
  },
  "scheme": "cardrop"
}
