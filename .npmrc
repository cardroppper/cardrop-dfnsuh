
# Force npm as package manager
package-manager=npm

# Disable pnpm completely
enable-pnpm=false

# Legacy peer deps for compatibility with Expo 54
legacy-peer-deps=true

# Disable strict engine checking
engine-strict=false

# Use exact versions for stability
save-exact=true

# Disable funding messages
fund=false

# Disable audit during install
audit=false

# Increase network timeout for large packages
fetch-timeout=300000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Prevent package-lock.json conflicts
package-lock=true

# Use npm registry
registry=https://registry.npmjs.org/
