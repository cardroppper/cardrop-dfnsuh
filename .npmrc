
# Force npm as the only package manager
engine-strict=true
package-manager-strict=true

# Disable pnpm
enable-pnpm=false

# Use npm's flat node_modules structure
legacy-peer-deps=false
strict-peer-dependencies=false

# Prevent hoisting issues
hoist=true
shamefully-hoist=true

# Cache settings
cache=/tmp/npm-cache
prefer-offline=false
