
# Force npm as package manager
package-manager=npm

# Disable pnpm
enable-pnpm=false

# Legacy peer deps for compatibility
legacy-peer-deps=true

# Disable strict engine checking
engine-strict=false

# Use exact versions
save-exact=false

# Disable funding messages
fund=false

# Disable audit
audit=false

# Increase network timeout
fetch-timeout=300000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
