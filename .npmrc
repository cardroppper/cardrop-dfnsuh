
# Force npm usage (no pnpm)
package-manager=npm

# Legacy peer deps for compatibility
legacy-peer-deps=true

# Disable strict mode
strict=false
engine-strict=false

# Enable package-lock for reproducible builds
package-lock=true

# Use npm registry
registry=https://registry.npmjs.org/

# Increase network timeout for slow connections
fetch-timeout=300000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
